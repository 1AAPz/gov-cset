@using CSETWebCore.Model.Edm;
@model EdmScoreParent

@{ 
    string getScoreStyle(string score)
    {
        switch (score.ToLower())
        {
            case "red": return "red-score";
            case "yellow": return "yellow-score";
            case "green": return "green-score";
            case "lightgray": return "light-gray-score";
            default: return "default-score";
        }
    }
}

<div class="col">
    <div class="row">
        <div class="col-12">
            <h6 class="@getScoreStyle(Model.parent.Color)">@Model.parent.Title_Id</h6>
        </div>
    </div>
    <div class="row gx-1">
        @{
            var widthPercent = Math.Round((1f / 12f) * (12f / Model.children.Count) * 100f, 1).ToString();
            foreach (var child in Model.children)
            {
                <div class="col">
                    <p class="@getScoreStyle(child.Color) tinytext">@child.Title_Id</p>
                </div>
            }
        }
    </div>
</div>